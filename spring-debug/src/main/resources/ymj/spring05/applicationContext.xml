    <context:component-scan base-package="com.ymj.spring05.selfbdrpp"/>
    <!--表示当前容器要被spring识别到，并且声明为其中的一个bean对象-->
    <bean class="com.ymj.spring05.selfbdrpp.MyBeanDefinitionRegistryPostProcessor"/>
    <bean class="com.ymj.spring05.selfbdrpp.PersonService"/>

</beans>